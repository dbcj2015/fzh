<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bjsxt.dao.GoodsTypeDAO">

	<insert id="insert" parameterType="com.bjsxt.entity.GoodsType">
		INSERT INTO t_goodstype (goodstype_name)
		VALUES (#{goodstypeName})
	</insert>
	
	<update id="update" parameterType="com.bjsxt.entity.GoodsType">
		UPDATE t_goodstype
			SET  
				goodstype_id = #{goodstypeId}
				,goodstype_name = #{goodstypeName}
			WHERE goodstype_id = #{goodstypeId}
			
	</update>
	
	<delete id="delete" parameterType="Integer">
		DELETE FROM t_goodstype where goodstype_id = #{value}
	</delete>
	
	<select id="findById" parameterType="Integer" resultType="java.util.LinkedHashMap">
		select * from t_goodstype where goodstype_id = #{value}
	</select>
	
	<select id="findByProperty" parameterType="java.util.Map"   resultType="java.util.LinkedHashMap">
		select * from t_goodstype 
	</select>


</mapper>